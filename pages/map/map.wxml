<view class="map_box">
	<map
	 id="navi_map"
	 longitude="{{markers[0].longitude}}"
	 latitude="{{markers[0].latitude}}"
	 scale="12"
	 markers="{{markers}}"
	 polyline="{{polyline}}"
	/>
</view>
<view class="text_box">
	<view class="text">{{distance}}</view>
	<view class="text">{{cost}}</view>
	<view class="detail_button" bind:tap="showDetail">详情</view>
</view>

